
<html>
    
        <head>
            <meta charset="utf-8">
            
            <title>Amazon</title>
            <!-- Tell the browser to be responsive to screen width -->
            <meta name="viewport" content="width=device-width, initial-scale=1">
          
            <!-- Font Awesome -->
            <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
            <!-- Theme style -->
            <link rel="stylesheet" href="dist/css/adminlte.min.css">
            <!-- Google Font: Source Sans Pro -->
            <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <style>
           
            h1
            {
                text-align: center;
            }
            a
            {
                text-decoration: none;
            }
        </style>
        <script src="table2excel.js"></script>
    </head>
    <body >
        <div class="wrapper">
		
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-black navbar-light" style="background-color: #729af07c;"-->
            <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Home</a>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->
            
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
                <a href="#" class="brand-link">
                  <img src="logo.png"  class="brand-image">
                  <span class="brand-text font-weight-light">Online
                  </span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                          <li class="nav-item">
                            <a href='/create' class="nav-link">
                              <i class="nav-icon far fa-square text-info"></i>
                              <p>Add Product</p>
                            </a>
                          </li>
                          <li class="nav-item">
                            <a href="/updatestock" class="nav-link">
                              <i class="nav-icon far fa-square text-info"></i>
                              <p class="text">Update stock</p>
                            </a>
                          </li>
                          <li class="nav-item">
                            <a href="/deleteproduct" class="nav-link">
                              <i class="nav-icon far fa-square text-info"></i>
                              <p class="text">Delete Sales</p>
                            </a>
                          </li>
                          
                        </ul>
                    </nav>
                </div>
                <!-- /.sidebar -->

            </aside>
            
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper"  style=" background-color : #eedac0c0; height: 100%;">
                
                <section class="content-header">
                    <h1>Amazon</h1>
                </section>
                
                <section class="content">
                  <div class="card-body table-responsive p-0" style="height: 400px, width=100%;">
                    <table class="table table-hover table-head-fixed text-nowrap" id="tab">
                    <thread>
                        <tr>
                            <th  >ID</th>
                            <th  >Category</th>
                            <th  >Name</th>
                            <th  >Quantity</th>
                            <th >Price</th>
                            <th >   </th>
                            <th >   </th>
                            <th >    </th>
                            
                        </tr>
                    </thread>
                    <tbody>
                        <% for(var i=0;i<data.length;i++) {%>
                            <tr>
                                <td><%= data[i].pid %></td>
                                <td><%= data[i].category %></td>
                                <td><%= data[i].product %></td>
                                <td><div class="progress progress-xs" style="height: 10px;">
                                    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:<%= data[i].stock %>%"></div>
                                    </div>
                                    <small><%= data[i].stock %></small></td>
                                <td>Rs <%= data[i].price%>/-</td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/updatestock"><i class="fas fa-pencil-alt"></i>Edit</a>
                                  </td>
                                  <td>
                                    <td>
                                        <form action='/delete' method="post">
                                            <input type="hidden" name="pid" value=<%= data[i].pid %>>&nbsp;
                                            <input class="btn btn-danger btn-sm fas fa-trash"  type="submit" value="Delete" >
                                          <!--<a class="btn btn-danger btn-sm" href="#" ><i class="fas fa-trash"></i>Delete</a>-->
                                        </form>	
                                      </td>
                                    
                            </tr>
                           <% } %>
                           
                    </tbody>
                    </table>
            
                </div>
                </section> 
        </div>
        <script>
                 document.getElementById("prin").addEventListener('click',function(){
            var table2excel = new Table2Excel();
  table2excel.export(document.querySelectorAll("#tab"));
          });
        </script>  
    </body>
</html>